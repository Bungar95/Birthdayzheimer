<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/checkbox_note_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:minWidth="0dp"
        android:minHeight="0dp" />
    <!--
        <TextView
            android:id="@+id/tv_note_refersTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/checkbox_note_completed"
            android:layout_alignBottom="@id/checkbox_note_completed"
            android:layout_toEndOf="@id/checkbox_note_completed"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:textStyle="bold|italic"
            tools:text="Example item" />
    -->
    <TextView
        android:id="@+id/tv_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/checkbox_note_completed"
        android:layout_alignBottom="@id/checkbox_note_completed"
        android:layout_toStartOf="@id/label_note_priority"
        android:layout_toEndOf="@+id/checkbox_note_completed"
        android:ellipsize="end"
        android:gravity="center_horizontal|fill_horizontal|center_vertical"
        android:maxLines="2"
        android:textAlignment="center"
        tools:text="Example item" />

    <ImageView
        android:id="@+id/label_note_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_priority" />

</RelativeLayout>