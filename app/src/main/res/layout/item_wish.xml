<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal|fill_horizontal|center_vertical"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/label_user_generated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_wish"
        android:layout_alignBottom="@id/tv_wish"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_person_24" />

</RelativeLayout>